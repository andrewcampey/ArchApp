<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag :action => 'create' do %>
	
	<h2>Organisation Details</h2>
      <%= label :organisation, :name %>
      <%= text_field :organisation, :name %>
	  
	  <%= label :organisation, :schema %>
      <%= text_field :organisation, :schema %>
	<br/><br/>
	<h2>User Details</h2>
      <%= label :user, :firstname %>
      <%= text_field :user, :firstname %>
	  
	  <%= label :user, :lastname %>
      <%= text_field :user, :lastname %>
	  
      <%= label :user, :email %>
      <%= text_field :user, :email %>

      <%= label :user, :password %>
      <%= password_field :user, :password %>

      <%= label :password_confirmation, "Confirmation" %>
      <%= password_field :user, :password_confirmation %>

      <%= submit_tag "Create my account", class: "btn btn-large btn-primary" %>
	<% end %>
  </div>
</div>